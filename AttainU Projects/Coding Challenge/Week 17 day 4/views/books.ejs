    <form action="/books" method="post" style="width: 75%; margin-left: 160px;">
      <select class="form-control form-control-lg">
        <% for(var i=0; i<allData.length; i++) { %>
          <option>Select Author</option>
          <option> <%= allData[i].author %>  </option>
          <% } %> 
